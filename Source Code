-- LocalScript in StarterPlayerScripts

-- Reference to the Players service
local Players = game:GetService("Players")

-- Function to handle when a player joins
local function onPlayerAdded(player)
    -- Wait until the player's team is assigned
    player:GetPropertyChangedSignal("Team"):Wait()

    -- Check if the player has a team
    if player.Team then
        print(player.Name .. " is on team: " .. player.Team.Name)
    else
        print(player.Name .. " is not on any team.")
    end
end

-- Connect the PlayerAdded event
Players.PlayerAdded:Connect(onPlayerAdded)

-- Also check if the LocalPlayer is already present (for testing purposes)
if Players.LocalPlayer then
    onPlayerAdded(Players.LocalPlayer)
end

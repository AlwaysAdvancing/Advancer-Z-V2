while wait(0.2) do
-- LocalScript in StarterPlayerScripts

local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local Player = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- Function to check the player's team that you're looking at
local function getPlayerLookingAt()
    -- Create a ray from the camera to where the player is looking
    local mouse = Player:GetMouse()
    local direction = (Camera.CFrame.LookVector * 100) -- Change 100 to the distance you want to check
    local ray = Ray.new(Camera.CFrame.Position, direction)

    -- Raycast
    local hit, position = Workspace:FindPartOnRay(ray)

    -- Check if the hit part belongs to a player character
    if hit and hit.Parent then
        local character = hit.Parent
        local player = Players:GetPlayerFromCharacter(character)

        if player then
            return player
        end
    end

    return nil
end

-- Function to display the information of the player being looked at
local function checkPlayerTeam()
    local targetPlayer = getPlayerLookingAt()

    if targetPlayer then
        if targetPlayer.Team then
            print(targetPlayer.Name .. " is on team: " .. targetPlayer.Team.Name)
        else
            print(targetPlayer.Name .. " is not on any team.")
        end
    else
        print("No player found in sight.")
    end
end

-- Repeat checking every second (or any other interval you prefer)
while true do
    wait(1) -- Adjust the frequency as needed
    checkPlayerTeam()
end
end
